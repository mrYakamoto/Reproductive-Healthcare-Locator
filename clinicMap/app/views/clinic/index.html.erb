<div class="site-wrapper">

  <div class="site-wrapper-inner">

    <div class="cover-container">

      <div class="masthead clearfix">
        <div class="inner">
          <h3 class="masthead-brand">Find Real Reproductive Health Clinics</h3>
          <nav>
            <ul class="nav masthead-nav">
              <li class="active">
                <button type="button" class="btn btn-success" id="FP">Family Planning Clinics</button>
                <button type="button" class="btn btn-danger" id="CPC">"Crisis Pregnancy Centers"</button>
              </li>

            </ul>
          </nav>
          <%= form_tag("#", method: "get") do %>
            <%= text_field_tag 'search_input', nil, placeholder: 'zip code or city, state' %>
            <%= submit_tag("Search Near You") %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="inner cover">
      <div class="cover-heading" id="map">
      </div>

    </div>

